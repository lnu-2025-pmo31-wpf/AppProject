<UserControl x:Class="Presentation.Views.UserControls.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="mc">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button Content="Week" Command="{Binding LoadWeekCommand}" Width="100" Margin="5"/>
            <Button Content="Month" Command="{Binding LoadMonthCommand}" Width="100" Margin="5"/>
            <Button Content="Year" Command="{Binding LoadYearCommand}" Width="100" Margin="5"/>
        </StackPanel>

        <UniformGrid Grid.Row="1" Columns="3">
            <Border Background="White" CornerRadius="10" Padding="20" Margin="10">
                <StackPanel>
                    <TextBlock Text="Income" FontSize="16" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalIncome}" FontSize="28" FontWeight="Bold" Foreground="Green" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="10" Padding="20" Margin="10">
                <StackPanel>
                    <TextBlock Text="Expense" FontSize="16" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalExpense}" FontSize="28" FontWeight="Bold" Foreground="Red" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="10" Padding="20" Margin="10">
                <StackPanel>
                    <TextBlock Text="Balance" FontSize="16" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Balance}" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </UniformGrid>
    </Grid>
</UserControl>
