<UserControl x:Class="Presentation.Views.UserControls.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="30">
        <StackPanel Width="320">

            <!-- TITLE -->
            <TextBlock Text="Settings"
                       FontSize="26"
                       FontWeight="Bold"
                       Margin="0,0,0,30"/>

            <!-- USER INFO -->
            <Border Background="White"
                    CornerRadius="10"
                    Padding="15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Logged in as:" FontSize="14"/>
                    <TextBlock Text="{Binding Username}"
                               FontSize="18"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <!-- CHANGE PASSWORD -->
            <Border Background="White"
                    CornerRadius="10"
                    Padding="15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Change password"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <PasswordBox x:Name="OldPasswordBox"
                                 Margin="0,0,0,8"/>

                    <PasswordBox x:Name="NewPasswordBox"
                                 Margin="0,0,0,12"/>

                    <Button Content="Change password"
                            Height="36"
                            Background="#6C63FF"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="ChangePassword_Click"/>
                </StackPanel>
            </Border>

            <!-- CLEAR TRANSACTIONS -->
            <Border Background="White"
                    CornerRadius="10"
                    Padding="15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Danger zone"
                               FontWeight="Bold"
                               Foreground="DarkRed"
                               Margin="0,0,0,10"/>

                    <Button Content="Clear ALL transactions"
                            Command="{Binding ClearTransactionsCommand}"
                            Height="36"
                            Background="#B91C1C"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>
            </Border>

            <!-- LOGOUT -->
            <Button Content="Logout"
                    Command="{Binding LogoutCommand}"
                    Height="40"
                    Background="#E74C3C"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <!-- ABOUT -->
            <TextBlock Text="Money Manager © 2025"
                       Margin="0,30,0,0"
                       HorizontalAlignment="Center"
                       Foreground="Gray"/>
        </StackPanel>
    </Grid>
</UserControl>
