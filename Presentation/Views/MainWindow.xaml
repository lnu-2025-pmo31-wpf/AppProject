<Window x:Class="Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Money Manager"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <StackPanel Background="{DynamicResource SidebarBg}">
            <Button Content="Transactions"
                    Height="50"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="Transactions_Click"/>

            <Button Content="Categories"
                    Height="50"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="Categories_Click"/>

            <Button Content="Statistics"
                    Height="50"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="Statistics_Click"/>

            <Button Content="Settings"
                    Height="50"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="Settings_Click"/>
        </StackPanel>

        <!-- MAIN CONTENT -->
        <ContentControl x:Name="MainContent"
                        Grid.Column="1"
                        Background="{DynamicResource BgLight}"/>
    </Grid>
</Window>
